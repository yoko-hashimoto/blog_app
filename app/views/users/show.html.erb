<div class="container">

  <div class="profile">

    <h1><%= @user.name %>のページ</h1>

    <p>
      <%= image_tag @user.icon.url %>
    </p>

    <p>メールアドレス: <%= @user.email %></p>

    <h3>Favorite Lists</h3>

    <div class="content">
      <div class="row">
        <% @favorites_blogs. each do |favorites_blog| %>
          <div class="col-md-6">
            <div class="post">
              <div class="blog_title">
              <%= favorites_blog.title %>
              </div>
              <div class="blog_content">
              <%= favorites_blog.content %>
              </div>
              <div class="user_name">
              <%= favorites_blog.user.name %>
              </div>
              <div class="date">
              <%= favorites_blog.created_at.strftime("%Y-%m-%d %H:%M ") %>
              </div>

              <div>
                  <%= link_to 'Favorite Cancel', favorite_path(id: @favorites.find_by(blog_id: favorites_blog.id).id), method: :delete, class: 'btn btn-danger' %>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>