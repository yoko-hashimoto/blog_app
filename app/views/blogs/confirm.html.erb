<div class="container">
  <div class="confirm_wrapper"></div>
    <h4>この内容で投稿しますか？</h4>
      <div class="confirm_form">
        <%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
          <%= form.hidden_field :title %>
          <%= form.hidden_field :content %>
          
          <div class="confirm_content">
            <div >
              <p class="confirm_title_label">Title</p>
              <%= @blog.title %>
            </div>
            <br>
            <div>
              <p class="confirm_content_label">Content</p>
              <%= @blog.content %>
            </div>

            <!-- 確認画面でアップロードした画像を表示させるための記述 -->
            <%= image_tag(@blog.image.url) %>
            <%= form.hidden_field :image_cache %>

          </div>
          <%= form.submit "Post", class: "btn btn-default" %>
        <% end %>

        <%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
          <%= form.hidden_field :title %>
          <%= form.hidden_field :content %>
          <%= form.hidden_field :image_cache %>
          <%= form.submit "Back", name: 'back', class: "btn btn-default" %>
        <% end %>
      </div>
  </div>
</div>